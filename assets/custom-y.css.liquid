/* 1. Policy Pages*/
.page-policy-content {
    margin-top: 70px;
    margin-bottom: 60px;
}
.page-policy-content .page-width {
    
}
.page-content--tabs {
    width: 100%;
    display: flex;
    flex-direction: row;
    flex-wrap: wrap;
    justify-content: space-between;
}
.page-content--tabs .nav-tabs {
    width: 30%;
    max-width: 400px;
}
.page-content--tabs .nav-tabs li {
    align-items: center;
    display: flex;
    border-radius: 5px;
    padding: 16px;
    transition: all 0.2s ease-in-out;
}
.page-content--tabs .nav-tabs li.active,
.page-content--tabs .nav-tabs li:hover {
    background-color: #E8F7FB;
    
}
.page-content--tabs .nav-tabs li span {
    color: #8DB9C9;
    font-size: 24px;
    line-height: 1.33;
    min-width: 36px;
    margin-right: 10px;
}
.page-content--tabs .nav-tabs li a {
    color: #64626A;
    font-size: 18px;
    line-height: 1.33;
}
.page-content--tabs .nav-tabs li a:hover,
.page-content--tabs .nav-tabs li a:focus {
    background-color: transparent;
}
.page-content--tabs .tab-content {
    width: 65%;
    max-width: 800px;
}
.page-content--tabs .tab-pane {
    display: none;
}
.page-content--tabs .tab-pane.active {
    display: block;
}

@media only screen and (min-width: 1024px) and (max-width: 1280px){
    .page-content--tabs .nav-tabs li {
        padding: 8px 16px;
    }
    .page-content--tabs .nav-tabs li span {
        font-size: 18px;
        min-width: 28px;
        margin-right: 10px;
    }
    .page-content--tabs .nav-tabs li a {
        font-size: 16px;
    }
}
@media screen and (max-width: 1023px){
    .page-content--tabs {
        flex-direction: column;
    }
    .page-content--tabs .nav-tabs {
        width: 100%;
        max-width: none;
        display: flex;
        flex-wrap: wrap;
        justify-content: space-between;
        margin-bottom: 40px;
    }
    .page-content--tabs .nav-tabs li {
        width: 49%;
    }
    .page-content--tabs .tab-content {
        width: 100%;
    }
}
@media screen and (max-width: 768px){
    .page-content--tabs .nav-tabs li {
        padding: 8px 16px;
    }
    .page-content--tabs .nav-tabs li span {
        font-size: 18px;
        min-width: 28px;
        margin-right: 10px;
    }
    .page-content--tabs .nav-tabs li a {
        font-size: 16px;
    }
}
@media screen and (max-width: 480px){
    .page-content--tabs .nav-tabs li {
        width: 100%;
    }
    .page-content--tabs .nav-tabs li {
        padding: 16px 16px;
    }
}

<script>
  $(window).load(function(){
    var viewport_width = $(window).width();
    if (viewport_width > 767){
      $('.gallery_images').masonry({
        itemSelector: '.gallery_image',
        percentPosition: true,
        horizontalOrder: false
      });
    }
  });

</script>
<div class="page-width">
  <div class="grid">
    <div class="grid__item gallery_content_main medium-up--one-third">
      <p class="gallery_date">{{ section.settings.date }}</p>
      <h3 class="gallery_heading">{{ section.settings.heading }}</h3>
      <p class="gallery_description">{{ section.settings.description }}</p>
    </div>

    <div class="grid__item gallery_images medium-up--two-thirds">
      {% for block in section.blocks %}
      	<div class="gallery_image">
          <img src="{{ block.settings.image | img_url: 'master' }}">
        </div>
      {% endfor %}
    </div>
  </div>
</div>

{% schema %}
  {
    "name": "Gallery Content",
    "settings": [
      {
         "type": "text",
         "id": "date",
         "label": "Date"
      },
      {
         "type": "text",
         "id": "heading",
         "label": "Heading"
      },
      {
         "type": "textarea",
         "id": "description",
         "label": "Description"
      }
	],
    "blocks": [
      {
        "type": "image",
        "name": "Image",
        "settings": [
          {
            "type": "image_picker",
            "id": "image",
            "label": "Image"
          }
        ]
      }
    ]
  }
{% endschema %}



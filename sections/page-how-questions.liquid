<div class="page-how-questions">
  <h3>{{ section.settings.title }}</h3>
  <div class="how-questions-wrapper">
    {% for block in section.blocks %}
      <div class="how-question">
        <div class="question_title">{{ block.settings.title }}</div>
        <div class="question_content">{{ block.settings.content }}</div>
      </div>
    {% endfor %}
  </div>
</div>

{% schema %}
  {
    "name": "Questions",
    "settings": [
      {
         "type": "text",
         "id": "title",
         "label": "Title",
         "default": "Title"
      }
   ],
   "blocks": [
      {
        "name": "Question",
        "type": "Question",
        "settings": [
          {
           "type": "richtext",
           "id": "title",
           "label": "Title"
          },
          {
           "type": "richtext",
           "id": "content",
           "label": "Content"
          }
        ]
      }
    ]
  }
{% endschema %}
<div class="blog-template">
  <div class="banner-container" style="background-image: url('{{ section.settings.banner_image | img_url:'master' }}')">
    <div class="banner-content-wrapper">
      <div class="container page-width">
        <div class="banner-content">
          <h1>{{ section.settings.title }}</h1>
          <p>{{ section.settings.description }}</p>
          {% if section.settings.button_text != blank %}
          <a href="{{ section.settings.button_url }}">{{ section.settings.button_text }}</a>
          {% endif %}
        </div>
      </div>
    </div>
  </div>

  {%- assign blog = blogs['press'] -%}
  
  {% paginate blog.articles by 6 %}

    <div class="page-width blogs-container-press">
      <ul class="grid grid--uniform grid--blog">
        {% for article in blog.articles %}
          {% assign row = forloop.index | modulo: 2 %}
        
          {% if row != 0 %}
        	<div class="blogs-container-row">
          {% endif %}
        
          <li class="grid__item medium-up--one-half">
            <div class="grid__item-wrapper">
              <img src="{{ article.image | img_url: 'master' }}">
              <h2 class="article__title h3{% if article.image %} article__title--has-image{% endif %}">
                "{{ article.title | escape }}"
              </h2>
              <a href="{{ article.url }}" class="press-article_link" aria-label="{{ 'blogs.article.read_more_title' | t: title: article.title }}">
                Read article
              </a>
            </div>
          </li>
          
          {% if row != 1 %}
        	</div>
          {% endif %}    
              
        {% endfor %}
      </ul>
    </div>

  {%- if paginate.pages > 1 -%}
    {% include 'pagination', paginate: paginate %}
  {%- endif -%}

  {% endpaginate %}
  
</div>

